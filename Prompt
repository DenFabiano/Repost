apiVersion: v1
kind: Pod
metadata:
  name: webhook-test-pod
spec:
  restartPolicy: Never
  containers:
  - name: curl-container
    image: alpine
    command: ["/bin/sh", "-c"]
    args:
    - |
      apk add --no-cache wget && \
      wget -qO- http://188.227.84.184/webhook || echo "Failed to reach webhook"
